{
  "name": "@speedyshot/capture",
  "version": "0.2.9",
  "description": "A JavaScript libary to easily use SpeedyShot's capture service",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "format": "npx prettier --write \"src/**/*.ts\"",
    "lint": "npx tslint -p tsconfig.json",
    "build": "npx tsc",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "files": [
    "build/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SpeedyShot/capture.git"
  },
  "keywords": [
    "speedyshot",
    "screenshots",
    "snapshot",
    "pdf",
    "html",
    "crawling",
    "crawler"
  ],
  "author": "SpeedyShot by CreateMyTech",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "p-limit": "^2.3.0"
  }
}
